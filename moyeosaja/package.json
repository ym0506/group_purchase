{
    "name": "figma-website",
    "version": "1.0.0",
    "description": "피그마 디자인을 웹으로 구현한 공동구매 플랫폼",
    "main": "pages/home.html",
    "scripts": {
        "start": "live-server --port=3000 --host=localhost --open=/pages/home.html",
        "dev": "live-server --port=3000 --host=localhost --open=/pages/home.html",
        "proxy": "node proxy-server.js",
        "dev:proxy": "npm run proxy & live-server --port=3000 --host=localhost --open=/pages/home.html",
        "build": "npm run build:css && npm run build:js",
        "build:css": "echo 'CSS bundling...'",
        "build:js": "echo 'JS bundling...'",
        "serve": "python3 -m http.server 8000",
        "lint": "eslint js/**/*.js",
        "format": "prettier --write \"**/*.{html,css,js}\""
    },
    "keywords": [
        "figma",
        "web-development",
        "group-buying",
        "responsive-design"
    ],
    "author": "Your Name",
    "license": "MIT",
    "devDependencies": {
        "live-server": "^1.2.2",
        "eslint": "^8.0.0",
        "prettier": "^2.0.0"
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not dead"
    ]
}